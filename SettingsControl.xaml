<UserControl x:Class="AudioVisualizerWidget.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AudioVisualizerWidget"
             mc:Ignorable="d" 
             d:DesignHeight="135" d:DesignWidth="225">
    <StackPanel>
        <Grid Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Content="Graph Type:" FontSize="10"></Label>
            <ComboBox x:Name="graphSelect" Grid.Column="1"></ComboBox>
        </Grid>
        
        <Grid Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Content="Background Color:" FontSize="10"></Label>
            <TextBox x:Name="bgColor" Grid.Column="1"></TextBox>
        </Grid>

        <Grid Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Content="Bar Color:" FontSize="10"></Label>
            <TextBox x:Name="fgColor" Grid.Column="1"></TextBox>
        </Grid>

        <Grid Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Content="Visualizer Density:" FontSize="10"></Label>
            <Slider x:Name="vdSlider" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" Minimum="0" Maximum="10"></Slider>
        </Grid>

        <Grid Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Content="Visualizer Multiplier:" FontSize="10"></Label>
            <Slider x:Name="vmSlider" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" Minimum="0" Maximum="255"></Slider>
        </Grid>

        <Button Margin="2" Content="Save" Click="SaveButton_Click"></Button>
    </StackPanel>
</UserControl>
